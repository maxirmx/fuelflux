{
  "sinks": [
    {
      "name": "file",
      "type": "rotating_file",
      "filename": "/var/fuelflux/logs/fuelflux.log",
      "max_size": "10MB",
      "max_files": 5,
      "level": "debug",
      "pattern": "[%Y-%m-%d %H:%M:%S.%e] [%t] [%n] [%l] [%s:%#] %v"
    },
    {
      "name": "error_file",
      "type": "rotating_file",
      "filename": "/var/fuelflux/logs/fuelflux_error.log",
      "max_size": "5MB",
      "max_files": 3,
      "level": "warn",
      "pattern": "[%Y-%m-%d %H:%M:%S.%e] [%t] [%n] [%l] [%s:%#] %v"
    }
  ],
  "loggers": [
    {
      "name": "fuelflux",
      "level": "debug",
      "sinks": [ "file", "error_file" ]
    },
    {
      "name": "StateMachine",
      "level": "info",
      "sinks": [ "file", "error_file" ]
    },
    {
      "name": "Controller",
      "level": "info",
      "sinks": [ "file", "error_file" ]
    },
    {
      "name": "Peripherals",
      "level": "debug",
      "sinks": [ "file", "error_file" ]
    },
    {
      "name": "CloudService",
      "level": "info",
      "sinks": [ "file", "error_file" ]
    }
  ],
  "global_level": "debug",
  "async": {
    "enabled": true,
    "queue_size": 8192,
    "thread_count": 1,
    "overflow_policy": "block"
  }
}
